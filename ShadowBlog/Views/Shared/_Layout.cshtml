<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>The sharpest blog known to man</title>
    <link rel="icon" href="img/favicon.png">

    <!-- Bootstrap CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <!-- animate CSS -->
    <link href="~/css/animate.css" rel="stylesheet" />
    <!-- owl carousel CSS -->
    <link href="~/css/owl.carousel.min.css" rel="stylesheet" />
    <!-- themify CSS -->
    <link href="~/css/themify-icons.css" rel="stylesheet" />
    <!-- flaticon CSS -->
    <link href="~/css/liner_icon.css" rel="stylesheet" />
    <link href="~/css/search.css" rel="stylesheet" />
    <!-- style CSS -->
    <link href="~/css/style.css" rel="stylesheet" />
</head>

<body>
    <!--::header part start::-->
    <header class="main_menu">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <a class="navbar-brand" href="index.html"> @*@<img src="img/CWLogo.png" alt="logo">*@ </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <!--A Search Form-->
                        @*<form asp-action="SearchPosts" asp-controller="BlogPosts">
                                <input type="text" name="searchTerm" class="px-3"/>
                                <button class="btn btn-sm btn-dark" type="submit">Search</button>
                            </form>*@


                        <div class="collapse navbar-collapse main-menu-item justify-content-center"
                             id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Blogs" asp-action="Index"> Blog List</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="BlogPosts" asp-action="Index"> Create a blog</a>
                                </li>

                                <li class="nav-item">
                                    @* Link to portfolio*@
                                    <a class="nav-link" asp-controller="#" asp-action="#">Contact Me</a>
                                </li>
                            </ul>
                        </div>

                        <div class="header_social_icon d-none d-lg-block">
                            <ul>
                                <li>
                                    <div id="wrap">
                                        <form asp-controller="BlogPosts" asp-action="SearchPosts" autocomplete="on" method="Post">
                                            <input id="search" name="searchTerm" type="text" placeholder="Search here"><span class="ti-search"></span>
                                        </form>
                                    </div>
                                </li>
                                <li><a href="#" class="d-none d-lg-block"><i class="ti-facebook"></i></a></li>
                                <li><a href="#" class="d-none d-lg-block"> <i class="ti-twitter-alt"></i></a></li>
                                <li><a href="#" class="d-none d-lg-block"><i class="ti-instagram"></i></a></li>
                                <li><a href="#" class="d-none d-lg-block"><i class="ti-skype"></i></a></li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- Header part end-->
    

    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- footer part start-->
    <footer class="footer-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-3 col-lg-6 col-sm-6 mb-4 mb-xl-0 single-footer-widget">
                    <h4>Contact Info</h4>
                    <ul>
                        <li>
                            <p>
                                Address :1111 Address St.
                            </p>
                        </li>
                        <li><p>Phone : +888 44338899</p></li>
                        <li><p>Email : EmailGuy@Mailinator.com</p></li>
                    </ul>
                </div>


            </div>
            <div class="copyright_text">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <div class="copyright_part">
                            <p class="footer-text m-0">
                        </div>
                    </div>
                    <div class="col-lg-4 text-center text-lg-right">
                        <div class="footer-social">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer part end-->
    <!-- jquery -->
    <script src="~/js/jquery-1.12.1.min.js"></script>
    <!-- popper js -->
    <script src="~/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- custom js -->
    <script src="~/js/custom.js"></script>

    <!-- Add Custom Render Section... -->
    <script src="~/js/scripts.js"></script>
    <script>
        tinymce.init({
            selector: '#Content'
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>